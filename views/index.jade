doctype html
html
  head
    meta(charset='utf-8')
    title Jonglog
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui')
    link(rel='stylesheet', href='/css/lib.css')
  body
    header#js-header.bar.bar-nav
      a.icon.icon-left-nav.pull-left(data-href='/')
      a#js-refresh.icon.icon-refresh.pull-right
      h1.title 結果
    .content
      #js-date-list
      #js-result
        #js-results
        #js-total
      #js-register
        form.input-group
          .input-row
            label(for='js-date') 日付
            input#js-date(type='date', name='date', required)
          .input-row
            label.col-sm-2.control-label(for='js-round') 半荘
            input#js-round(type='number', name='round', pattern='^(\d{1,2})$', required)
          .input-row
            label.col-sm-2.control-label(for='js-score-hokaccha') @hokaccha
            input#js-score-hokaccha(type='number', name='hokaccha', step='100', pattern='^(\d{1,3}00|0)$', required)
          .input-row
            label.col-sm-2.control-label(for='js-score-1000ch') @1000ch
            input#js-score-1000ch(type='number', name='1000ch', step='100', pattern='^(\d{1,3}00|0)$', required)
          .input-row
            label.col-sm-2.control-label(for='js-score-hiloki') @hiloki
            input#js-score-hiloki(type='number', name='hiloki', step='100', pattern='^(\d{1,3}00|0)$', required)
          .input-row
            label.col-sm-2.control-label(for='js-score-tan_yuki') @tan_yuki
            input#js-score-tan_yuki(type='number', name='tan_yuki', step='100', pattern='^(\d{1,3}00|0)$', required)
          button#js-submit.btn.btn-primary.btn-block(type='submit') Submit
